<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/fhd_156"
        android:layout_height="@dimen/fhd_156"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/home_menu_center_btn_selector"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fhd_54"
        android:layout_toRightOf="@id/userImage">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_menu_user_name"
            android:textSize="@dimen/fhd_42"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fhd_21">
            <ImageView
                android:id="@+id/userTitleVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/userTitleMusicPack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fhd_15"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>